%main.container
  %h1.general-title-margin= t('page.book.index.catalog')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
          = filter_books_title
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        = render 'filter'
    = render 'category'
  = render 'mobile_sort'
  .mb-120
    = render 'books'
    - if more_books?(@books)
      .text-center
        = link_to t('button.view_more'), main_app.catalog_path(page: @books.next_page, category: @category_id, filter: @filter), id: 'view-more-books', class: 'btn btn-primary', remote: true
    