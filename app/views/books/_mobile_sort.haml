.dropdowns.mb-25.visible-xs
  %p.lead.small.mb-10= t('book.show.filter')
  .dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = sort_category_title
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        = link_to "#{t('button.all')} (#{Category.all.sum(&:books_count)})", catalog_path          
      - Category.all.each do |category|
        %li
          = link_to "#{category.title} (#{category.books_count})", catalog_path(category: category.id, filter: @filter)
  %p.lead.small.mb-10= t('page.book.index.sort_by')
  .dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = filter_books_title
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    = render 'filter'